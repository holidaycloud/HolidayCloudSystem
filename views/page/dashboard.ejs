<script>
    $(function () {
        (function(){
            var map = new BMap.Map('map_canvas');
            map.addControl(new BMap.NavigationControl());
            var locations = [];
            <%locations.forEach(function(l){%>
            locations.push(<%-JSON.stringify(l)%>);
            <%})%>
            for(var i in locations){
                var point = new BMap.Point(locations[i].location.lon,locations[i].location.lat);
                var marker = new BMap.Marker(point);
                var label = new BMap.Label(locations[i].loginName);
                marker.setLabel(label);
                map.addOverlay(marker);
                map.centerAndZoom(point, 15);
            }
        })()



        $('#container').highcharts({
            chart: {
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false
            },
            credits:{
                enabled:false
            },
            title: {
                text: ''
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: false
                    },
                    showInLegend: true
                }
            },
            series: [{
                type: 'pie',
                name: '优惠券领用情况',
                data: [
                    ["未领取",<%=data[0].data%>],
                    ["已领取",<%=data[1].data%>],
                    ["已使用",<%=data[2].data%>],
                ]
            }]
        });
    });
</script>